    - let icons = ['bx bxl-facebook' , 'bx bxl-twitter']
    - let socialLinks = ["https://facebook.com" , 'https://twitter.com']
    - let classes = ['fb' , 'tw']
mixin social(socialClass,icons , links = "" ,classes= "")
    div(class = socialClass)
        - for ( i = 0 ; i<icons.length ; i++)
            a(href=links[i] , class = classes[i])
                i( class = icons[i])

