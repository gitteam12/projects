mixin nav-links( ulClass,links) 
    ul(class = ulClass)
        - for ( i = 0 ; i<links.length ; i++)
            if i  == 0
                li.nav-item
                    a.nav-link(class= 'active' , href = "#" + links[i]) #{links[i]}
            else if i > 0
                li.nav-item
                    a.nav-link( href = "#" + links[i]) #{links[i]}
