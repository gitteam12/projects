mixin colors(ulClass ,array)
    ul(class = ulClass)
        - for ( i = 0 ; i<array.length ; i++)
            if i  == 0
                li(class= 'active' , data-color = array[i] , style = {'background-color' : array[i] })
            else if i > 0
                li(data-color = array[i] , style = {'background-color' : array[i] ,}) 
